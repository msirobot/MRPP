<?xml version="1.0"?>
<launch>
    <!-- 启动Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find multi_robot_simulation)/worlds/empty.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- 生成多个机器人 -->
    <include file="$(find multi_robot_simulation)/launch/spawn_robot.launch">
        <arg name="robot_name" value="robot1"/>
        <arg name="x" value="0.0"/>
        <arg name="y" value="0.0"/>
        <arg name="z" value="0.0"/>
    </include>

    <include file="$(find multi_robot_simulation)/launch/spawn_robot.launch">
        <arg name="robot_name" value="robot2"/>
        <arg name="x" value="0.5"/>
        <arg name="y" value="0.0"/>
        <arg name="z" value="0.0"/>
    </include>

    <include file="$(find multi_robot_simulation)/launch/spawn_robot.launch">
        <arg name="robot_name" value="robot3"/>
        <arg name="x" value="1.0"/>
        <arg name="y" value="0.0"/>
        <arg name="z" value="0.0"/>
    </include>

    <!-- 启动多机器人仿真节点 -->
    <node name="multi_robot_sim" pkg="multi_robot_simulation" type="multi_robot_sim.py" output="screen">
        <param name="config_path" value="$(find multi_robot_simulation)/config/robots.yaml"/>
        <param name="formation_type" value="line"/>
    </node>

    <!-- 启动RVIZ -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find multi_robot_simulation)/rviz/formation.rviz"/>
</launch>